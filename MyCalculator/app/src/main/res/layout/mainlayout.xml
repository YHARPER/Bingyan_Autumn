<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f5ec">

    <TextView
        android:id="@+id/Equation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:textColor="#f001"
        android:singleLine="true"
        android:textSize="40sp"
        android:text=""
        android:gravity="right"/>
    <TableRow android:layout_weight="1"
                android:background="#fffffb">

        <Button
            android:id="@+id/BACKSPACE"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="<="
            android:textColor="#77787b"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/LBracket"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="("
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/RBracket"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=")"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/CE"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="C"
            android:textColor="#f58220"
            android:textSize="40sp"/>
    </TableRow>.
    <TableRow android:layout_weight="1"
        android:background="#fffffb">
        <Button
            android:id="@+id/Remainder"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="%"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/Involution"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="^"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/E"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="e"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/P"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Ï€"
            android:textColor="#f58220"
            android:textSize="30sp"/>
    </TableRow>.
    <TableRow android:layout_weight="1"
        android:background="#fffffb">
        <Button
            android:id="@+id/N7"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="7"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/N8"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="8"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/N9"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="9"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/Add"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="+"
            android:textColor="#77787b"
            android:textSize="30sp"/>
    </TableRow>.
    <TableRow android:layout_weight="1"
        android:background="#fffffb">
        <Button
            android:id="@+id/N4"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="4"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/N5"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="5"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/N6"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="6"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/Subtract"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="-"
            android:textColor="#77787b"
            android:textSize="30sp"/>
    </TableRow>.
    <TableRow android:layout_weight="1"
        android:background="#fffffb">
        <Button
            android:id="@+id/N1"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="1"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/N2"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="2"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/N3"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="3"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/Multiply"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="*"
            android:textColor="#77787b"
            android:textSize="30sp"/>
    </TableRow>.
    <TableRow android:layout_weight="1"
        android:background="#fffffb">
        <Button
            android:id="@+id/Point"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="."
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/Zero"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="0"
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/Equal"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="="
            android:textColor="#77787b"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/Divide"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="/"
            android:textColor="#77787b"
            android:textSize="30sp"/>
    </TableRow>.
    </TableLayout>